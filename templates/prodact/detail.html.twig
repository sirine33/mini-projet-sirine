{% extends 'base.html.twig' %}

{% block title %}List Produit{% endblock %}

{% block body %}
<h1>liste des produits</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Libell√©</th>
      <th scope="col">Image</th>
      <th scope="col">Description</th>
      <th scope="col">Prix Unitaires</th>
    </tr>
  </thead>
  <tbody>
  
    <tr>
      
      <td scope="row">{{products.lib}}</td>
      <td><img alt="html image example" src="{{products.img}}"  /></td>
      <td>{{products.des}}</td>
